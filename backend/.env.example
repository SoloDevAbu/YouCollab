# Environment
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_DOMAIN=localhost
PRODUCTION_COOKIE_DOMAIN=.yourdomain.com
COOKIE_SECURE=false
PRODUCTION_COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
PRODUCTION_COOKIE_SAME_SITE=none

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/youcollab
PRODUCTION_MONGODB_URI=your_production_mongodb_uri

# Email Configuration
SENDER_EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_SERVICE=gmail

# Frontend URLs
FRONTEND_URL=http://localhost:5173
PRODUCTION_FRONTEND_URL=https://yourdomain.com

# API Configuration
API_URL=http://localhost:5000
PRODUCTION_API_URL=https://api.yourdomain.com 